    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
            <div class="modal-body">
                <input type="text" placeholder="Imap Host" class="form-control borderless border-bottom mb-4 mt-3" asp-for="ImapSetup.Host" />
                <div class="input-group justify-content-end mt-5">
                    <a href="#" class="btn btn-outline-danger mr-5" data-dismiss="modal">Cancel</a>
                    <button type="button" class="btn btn-outline-success" id="saveImapHostBtn">Save</button>
                </div>
            </div>
        </div>
