    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
            <div class="modal-body">
                <input type="number" placeholder="Imap port" class="form-control borderless border-bottom mb-4 mt-3" asp-for="ImapSetup.Port" />
                <div class="input-group justify-content-end mt-5">
                    <a href="#" class="btn btn-outline-danger mr-5" data-dismiss="modal">Cancel</a>
                    <button type="button" class="btn btn-outline-success" id="saveImapPortBtn">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End-->
<!--Facebook -->
<div class="modal" id="facebookModal">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
            <div class="modal-body">
                <h6 class="text-center mt-2">Enable Facebook Page Share</h6>
                <input type="text" placeholder="Facebook PageAccessToken" class="form-control mt-3" asp-for="FacebookUserAccessToken" />
                <input type="text" placeholder="Facebook PageId" class="form-control mt-3" asp-for="FacebookPageId" />

                <div class="input-group justify-content-end mt-5">
                    <a href="#" class="btn btn-outline-danger mr-5" data-dismiss="modal">Cancel</a>
                    <button type="button" class="btn btn-outline-success" id="savefacebookBtn">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End-->
<!--Favicon-->
<div class="modal" id="faviconModal">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
            <div class="modal-body">
                <form method="post" enctype="multipart/form-data" action="/admin/uploadfavicon" onsubmit="uploadFavicon(this); return false" asp-antiforgery="false">
                    <span class="text-danger ml-2 mt-1" id="favicoError"></span>
                    <div class="progress mt-3" style="display:none;" id="progress">
                        <div class="progress-bar bg-danger" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" id="progressbar">

                        </div>
                    </div>
                    <input type="file" class="form-control borderless border-bottom mb-4 mt-3" name="File" id="File" accept="image/*" />
                    <div class="input-group justify-content-end mt-5">
                        <a href="#" class="btn btn-outline-danger mr-5" data-dismiss="modal">Cancel</a>
                        <button type="submit" class="btn btn-outline-success">Upload</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!--End-->
<!--Connection String-->
<div class="modal" id="connectionStringModal">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
            <div class="modal-body">
                <span class="text-danger" id="connectionError"></span>
                <input type="text" placeholder="Connection String" class="form-control borderless border-bottom mb-4 mt-3" id="connectionString" />
                <div class="input-group justify-content-end mt-5">
                    <a href="#" class="btn btn-outline-danger mr-5" data-dismiss="modal">Cancel</a>
