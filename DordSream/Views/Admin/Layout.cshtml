@{
    ViewData["Title"] = "Layout";
    Layout = "_AdminLayout";

}  
@section scripts{
    <script>
        $(".spinner").css("display", "none");
        function stopClick(e) {
            e.preventDefault();
        }
    </script>
}
<div class="container-fluid right-over-flow right-over-flow-f pl-2 shadow-sm border">

    <layoutwidget class="row">
        <div class="col-12 border mb-3">
            <label class="layout-header"> Top</label>
            <div class="layout-content">


                <ul class="list-group ml-3 mt-4 layout-side">
                    <topwidget>
                        <li class="list-group-item shadow-sm pl-4 pt-3 text-capitalize mb-3">

                            <a href="#" class="nav-link" id="removelink" onclick="this.addEventListener('click', stopClick, false);">
                                <h6 id="name"></h6>
                            </a>
                            <p id="description"></p>

                        </li>
                    </topwidget>



                </ul>
                <a href="/admin/widgets/top/" class="nav-link mb-3" id="addlink">Add Widget</a>
            </div>

        </div>
        <div class="col-md-6 border">
            <label class="layout-header">Left</label>
            <div class="layout-content">


                <ul class="list-group ml-3 mt-4 layout-side">
                    <leftwidget>
                        <li class="list-group-item shadow-sm pl-4 pt-3 text-capitalize mb-3">

                            <a href="#" class="nav-link" id="removelink"  onclick="this.addEventListener('click', stopClick, false);">
                                <h6 id="name"></h6>
                            </a>
                            <p id="description"></p>

                        </li>
                    </leftwidget>



                </ul>
                <a href="/admin/widgets/left/" class="nav-link mb-3" id="addlink">Add Widget</a>
            </div>
        </div>
        <div class="col-md-6 border">
            <label class="layout-header">Right</label>
            <div class="layout-content">


                <ul class="list-group ml-3 mt-4 layout-side">
                    <rightwidget>
                        <li class="list-group-item shadow-sm pl-4 pt-3 text-capitalize mb-3">

                            <a href="#" class="nav-link" id="removelink"  onclick="this.addEventListener('click', stopClick, false);">
                                <h6 id="name"></h6>
                            </a>
                            <p id="description"></p>

                        </li>
                    </rightwidget>



                </ul>
                <a href="/admin/widgets/right/" class="nav-link mb-3" id="addlink">Add Widget</a>
            </div>
        </div>
        <div class="col-12 border mt-3">
            <label class="layout-header">Bottom</label>
            <div class="layout-content">


                <ul class="list-group ml-3 mt-4 layout-side">
                    <bottomwidget>
                        <li class="list-group-item shadow-sm pl-4 pt-3 text-capitalize mb-3">

                            <a href="#" class="nav-link" id="removelink"  onclick="this.addEventListener('click', stopClick, false);">
                                <h6 id="name"></h6>
                            </a>
                            <p id="description"></p>

                        </li>

                    </bottomwidget>


                </ul>
                <a href="/admin/widgets/bottom/" class="nav-link mb-3" id="addlink">Add Widget</a>
            </div>
        </div>
    </layoutwidget>
</div>