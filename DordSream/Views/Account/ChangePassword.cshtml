@model ChangePassword
@{
    ViewData["Title"] = "Confirm Password";
    Layout = "_AccountLayout";
}
<div class="card shadow-lg mr-auto ml-auto edit-card mt-3">
    <div class="card-header bg-transparent">
        <h3 class="card-title">Confirm Password</h3>
    </div>
    <div class="card-body text-center">
        <form asp-route="ChangePassword" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="input-group mt-5 align-items-baseline">
                <h6 class="card-title">New Password</h6>
                <input type="text" placeholder="New Passwword" class="form-control ml-5" asp-for="NewPassword" />
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Token" />

            <div class="form-group mt-5">
                <button type="submit" class="btn btn-primary">Confirm Password</button>
            </div>
        </form>

    </div>
</div>