@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "New Theme";
}
@section scripts{

    <script src="/adminwwwroot/js/53adfae2-3572-40a1-899f-80dcd94e2cf1.js" asp-append-version="true"></script>
}
<div class="container-fluid right-over-flow right-over-flow-f pl-2 shadow-sm border">


    <div class="d-block m-5">
        <h4>Upload Your Theme</h4>
        <p class="text-muted mt-4 small">the template must be in zip file and contains( (index or landing or both files), banner file(.jpg or .png) and readme.txt)  the maximum file size is 2GB </p>

        <form method="post" asp-route="addtheme" enctype="multipart/form-data" onsubmit="upload(this); return false" class="form-group mt-5" asp-antiforgery="false">
            <div class="progress mt-3 w-75" style="display:none;" id="progress">
                <div class="progress-bar bg-danger" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" id="progressbar">

                </div>
            </div>
            <div class="form-group mt-4">
                <input type="file" class="form-control borderless border-bottom mb-1 form-control-file w-75" name="File" id="File" accept=".dordstream" required />
                <i class="text-danger ml-4 mt-3" id="Themerror"> </i>
            </div>
            <div class="input-group justify-content-start mt-5 ml-2">
                <input type="submit" class="btn btn-outline-danger" name="newThemeSubmit" value="Upload" />
            </div>
        </form>
    </div>





</div>

